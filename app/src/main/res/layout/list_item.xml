<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/profile_image"
        android:layout_width="match_parent"
        android:layout_height="@dimen/profile_image_layout"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/img_profile_image"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:scaleType="centerInside"/>
    </LinearLayout>
    <View
        android:id="@+id/separator"
        android:layout_width="match_parent"
        android:layout_height="@dimen/separater"
        android:background="@color/colorPrimary"
        android:layout_below="@id/profile_image"
        android:layout_marginTop="5dp"/>
    <LinearLayout
        android:id="@+id/short_name_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/text_layout"
        android:layout_below="@+id/separator"
        android:orientation="vertical">
        <include layout="@layout/stat_item"></include>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/jumper_number_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/text_layout"
        android:layout_below="@+id/short_name_layout"
        android:orientation="vertical">
        <include layout="@layout/stat_item"></include>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/position_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/text_layout"
        android:layout_below="@+id/jumper_number_layout"
        android:orientation="vertical">
        <include layout="@layout/stat_item"></include>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/stat_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/text_layout"
        android:layout_below="@+id/position_layout"
        android:orientation="vertical">
        <include layout="@layout/stat_item"></include>
    </LinearLayout>
</RelativeLayout>